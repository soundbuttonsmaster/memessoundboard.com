<style>
  .footer-links-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    width: 100%;
  }

  .footer-links-column {
    flex: 1;
  }

  .footer-links-column .footer-links {
    margin: 0;
    padding: 0;
    list-style: none;
  }

  .footer-links-column .footer-links li {
    margin-bottom: 0.5rem;
  }

  .footer-links-column .footer-links li:last-child {
    margin-bottom: 0;
  }

  .footer-links-column .footer-links a {
    color: var(--text-secondary);
    text-decoration: none;
    font-size: 0.9rem;
    transition: color 0.2s ease;
  }

  .footer-links-column .footer-links a:hover {
    color: var(--primary-color);
  }

  .footer-social {
    text-align: center;
    padding: 2rem 0;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    margin-top: 2rem;
  }

  .footer-social-title {
    color: var(--text-secondary);
    font-size: 1.1rem;
    font-weight: 600;
    margin-bottom: 1rem;
  }

  .social-icons {
    display: flex;
    justify-content: center;
    gap: 1.5rem;
    align-items: center;
  }

  .social-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.1);
    color: var(--text-secondary);
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .social-icon:hover {
    background: var(--primary-color);
    color: var(--white);
    transform: translateY(-2px);
  }

  .social-icon svg {
    width: 20px;
    height: 20px;
  }

  /* Mobile responsive */
  @media (max-width: 768px) {
    .footer-links-grid {
      grid-template-columns: 1fr;
      gap: 1rem;
    }

    .social-icons {
      gap: 1rem;
    }

    .social-icon {
      width: 35px;
      height: 35px;
    }

    .social-icon svg {
      width: 18px;
      height: 18px;
    }
  }
</style>

<script>
  // Handle create sound link click
  document.addEventListener('DOMContentLoaded', () => {
    const createSoundLink = document.getElementById('create-sound-link');

    if (createSoundLink) {
      createSoundLink.addEventListener('click', (e) => {
        e.preventDefault();

        // Import auth functions dynamically
        import('../lib/auth.js').then(({ getAuthToken }) => {
          const token = getAuthToken();

          if (token) {
            // User is logged in, redirect to upload page
            window.location.href = '/upload';
          } else {
            // User is not logged in, redirect to login page
            window.location.href = '/login';
          }
        });
      });
    }
  });
</script>

