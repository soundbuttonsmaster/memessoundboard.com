---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { fetchCategories } from '../lib/api';

const categories = await fetchCategories();

// SEO Meta Data
const pageTitle = 'Upload Sound Button - Create Meme Soundboard | MemesSoundBoard';
const pageDescription = 'Upload your own sound buttons to MemesSoundBoard. Create meme soundboards, share funny sound effects, and join the largest soundboard community.';
const pageKeywords = 'upload sound, create sound button, make soundboard, upload audio, share sounds, meme soundboard creator';
const canonicalUrl = 'https://MemesSoundBoard/upload';
const ogImage = '/images/og-image.jpg';
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <!-- Primary Meta Tags -->
    <title>{pageTitle}</title>
    <meta name="title" content={pageTitle} />
    <meta name="description" content={pageDescription} />
    <meta name="keywords" content={pageKeywords} />
    <meta name="author" content="MemesSoundBoard" />
    <meta name="robots" content="noindex, nofollow" />
    
    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalUrl} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={pageDescription} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:site_name" content="MemesSoundBoard" />
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:url" content={canonicalUrl} />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={pageDescription} />
    
    <!-- Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "WebPage",
      "name": "Upload Sound",
      "description": pageDescription,
      "url": canonicalUrl
    })} />
    
    <!-- Favicon Links -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/site.webmanifest" />
    
    <link rel="stylesheet" href="/styles/global.css" />
  </head>
  <body>
    <Header />
    
    <main class="main-content">
      <!-- Loading/Auth Check State -->
      <div id="authCheckState" class="auth-check-state">
        <div class="spinner"></div>
        <p>Checking authentication...</p>
      </div>

      <!-- Not Authenticated State -->
      <div id="notAuthenticatedState" class="not-authenticated-state" style="display: none;">
        <div class="auth-required-container">
          <div class="auth-required-card">
            <div class="auth-icon-wrapper">
              <svg width="80" height="80" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <rect x="3" y="11" width="18" height="11" rx="2" ry="2"/>
                <path d="M7 11V7a5 5 0 0 1 10 0v4"/>
              </svg>
            </div>
            <h2 class="auth-title">Authentication Required</h2>
            <p class="auth-description">You need to be logged in to upload sounds to MemesSoundBoard. Create an account or login to start sharing your sound buttons with the community.</p>
            <div class="auth-actions">
              <a href="/login" class="auth-button primary">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <rect x="3" y="11" width="18" height="11" rx="2" ry="2"/>
                  <path d="M7 11V7a5 5 0 0 1 10 0v4"/>
                </svg>
                Login
              </a>
              <a href="/signup" class="auth-button secondary">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M12 5v14M5 12h14"/>
                </svg>
                Create Account
              </a>
            </div>
            <div class="auth-benefits">
              <p class="benefits-title">Why create an account?</p>
              <ul class="benefits-list">
                <li>
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="20 6 9 17 4 12"/>
                  </svg>
                  Upload unlimited sounds
                </li>
                <li>
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="20 6 9 17 4 12"/>
                  </svg>
                  Save your favorite sounds
                </li>
                <li>
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="20 6 9 17 4 12"/>
                  </svg>
                  Track your uploads
                </li>
                <li>
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="20 6 9 17 4 12"/>
                  </svg>
                  Build your soundboard collection
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>

      <!-- Authenticated Content -->
      <div id="authenticatedContent" style="display: none;">
        <div class="page-header">
          <h1 class="page-title">Upload Sound</h1>
          <p class="page-subtitle">Share your sound buttons with the community</p>
        </div>

        <div class="upload-container">
          <div class="upload-card">
            <form id="uploadForm" class="upload-form">
            <div class="form-group">
              <label for="name" class="form-label">Sound Name *</label>
              <input
                type="text"
                id="name"
                name="name"
                class="form-input"
                placeholder="Enter sound name"
                required
              />
            </div>

            <div class="form-group">
              <label for="sound_file" class="form-label">Audio File *</label>
              <div class="file-upload-area" id="fileUploadArea">
                <input
                  type="file"
                  id="sound_file"
                  name="sound_file"
                  accept="audio/*"
                  required
                  style="display: none;"
                />
                <div class="upload-placeholder">
                  <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4M17 8l-5-5-5 5M12 3v12"/>
                  </svg>
                  <p>Click to upload or drag and drop</p>
                  <small>MP3, WAV, OGG (Max 10MB)</small>
                </div>
                <div class="file-info" id="fileInfo" style="display: none;">
                  <span id="fileName"></span>
                  <button type="button" id="removeFile" class="remove-file">Remove</button>
                </div>
              </div>
            </div>

            <div class="form-group">
              <label for="category" class="form-label">Category</label>
              <select id="category" name="category" class="form-input">
                <option value="">Select a category (optional)</option>
                {categories.map((cat) => (
                  <option value={cat.id}>{cat.name}</option>
                ))}
              </select>
            </div>

            <div class="form-group">
              <label for="tags" class="form-label">Tags</label>
              <input
                type="text"
                id="tags"
                name="tags"
                class="form-input"
                placeholder="funny, music, meme (comma-separated)"
              />
              <small class="form-hint">Separate tags with commas</small>
            </div>

            <div id="errorMessage" class="error-message" style="display: none;"></div>
            <div id="successMessage" class="success-message" style="display: none;"></div>

            <button type="submit" class="upload-button" id="submitBtn">
              <span class="button-text">Upload Sound</span>
              <span class="button-loader" style="display: none;">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M21 12a9 9 0 1 1-6.219-8.56"/>
                </svg>
              </span>
            </button>
          </form>
        </div>

        <div class="upload-info-card">
          <h3>Upload Guidelines</h3>
          <ul class="guidelines-list">
            <li>Maximum file size: 10MB</li>
            <li>Supported formats: MP3, WAV, OGG</li>
            <li>Choose a descriptive name for your sound</li>
            <li>Add relevant tags to help others find your sound</li>
            <li>Select an appropriate category</li>
            <li>Ensure your content follows community guidelines</li>
          </ul>
          </div>
        </div>
      </div>
    </main>

    <Footer />

    <script>
      import { uploadSound } from '../lib/api';
      import { getAuthToken } from '../lib/auth';

      const authCheckState = document.getElementById('authCheckState') as HTMLElement;
      const notAuthenticatedState = document.getElementById('notAuthenticatedState') as HTMLElement;
      const authenticatedContent = document.getElementById('authenticatedContent') as HTMLElement;

      // Check authentication immediately
      const token = getAuthToken();
      
      if (!token) {
        // Redirect to login if not authenticated
        window.location.href = '/login';
      } else {
        // Hide loading, show authenticated content
        authCheckState.style.display = 'none';
        authenticatedContent.style.display = 'block';
      }

      const uploadForm = document.getElementById('uploadForm') as HTMLFormElement;
      const fileInput = document.getElementById('sound_file') as HTMLInputElement;
      const fileUploadArea = document.getElementById('fileUploadArea') as HTMLElement;
      const uploadPlaceholder = fileUploadArea.querySelector('.upload-placeholder') as HTMLElement;
      const fileInfo = document.getElementById('fileInfo') as HTMLElement;
      const fileName = document.getElementById('fileName') as HTMLElement;
      const removeFileBtn = document.getElementById('removeFile') as HTMLButtonElement;
      const errorMessage = document.getElementById('errorMessage') as HTMLDivElement;
      const successMessage = document.getElementById('successMessage') as HTMLDivElement;
      const submitBtn = document.getElementById('submitBtn') as HTMLButtonElement;

      // File upload area click
      fileUploadArea.addEventListener('click', () => {
        if (!fileInfo.style.display || fileInfo.style.display === 'none') {
          fileInput.click();
        }
      });

      // File input change
      fileInput.addEventListener('change', (e) => {
        const file = (e.target as HTMLInputElement).files?.[0];
        if (file) {
          if (file.size > 10 * 1024 * 1024) {
            errorMessage.textContent = 'File size must be less than 10MB';
            errorMessage.style.display = 'block';
            fileInput.value = '';
            return;
          }
          
          fileName.textContent = file.name;
          uploadPlaceholder.style.display = 'none';
          fileInfo.style.display = 'flex';
        }
      });

      // Remove file
      removeFileBtn.addEventListener('click', (e) => {
        e.stopPropagation();
        fileInput.value = '';
        uploadPlaceholder.style.display = 'block';
        fileInfo.style.display = 'none';
      });

      // Drag and drop
      fileUploadArea.addEventListener('dragover', (e) => {
        e.preventDefault();
        fileUploadArea.classList.add('drag-over');
      });

      fileUploadArea.addEventListener('dragleave', () => {
        fileUploadArea.classList.remove('drag-over');
      });

      fileUploadArea.addEventListener('drop', (e) => {
        e.preventDefault();
        fileUploadArea.classList.remove('drag-over');
        
        const file = e.dataTransfer?.files[0];
        if (file) {
          if (file.size > 10 * 1024 * 1024) {
            errorMessage.textContent = 'File size must be less than 10MB';
            errorMessage.style.display = 'block';
            return;
          }
          
          const dataTransfer = new DataTransfer();
          dataTransfer.items.add(file);
          fileInput.files = dataTransfer.files;
          
          fileName.textContent = file.name;
          uploadPlaceholder.style.display = 'none';
          fileInfo.style.display = 'flex';
        }
      });

      // Form submit
      uploadForm.addEventListener('submit', async (e) => {
        e.preventDefault();
        
        const buttonText = submitBtn.querySelector('.button-text') as HTMLElement;
        const buttonLoader = submitBtn.querySelector('.button-loader') as HTMLElement;
        
        errorMessage.style.display = 'none';
        successMessage.style.display = 'none';
        
        buttonText.style.display = 'none';
        buttonLoader.style.display = 'inline-block';
        submitBtn.disabled = true;

        const formData = new FormData(uploadForm);
        const file = fileInput.files?.[0];
        
        if (!file) {
          errorMessage.textContent = 'Please select an audio file';
          errorMessage.style.display = 'block';
          buttonText.style.display = 'inline';
          buttonLoader.style.display = 'none';
          submitBtn.disabled = false;
          return;
        }

        const uploadData = new FormData();
        uploadData.append('name', formData.get('name') as string);
        uploadData.append('sound_file', file);
        
        if (formData.get('category')) {
          uploadData.append('category', formData.get('category') as string);
        }
        
        if (formData.get('tags')) {
          uploadData.append('tag', formData.get('tags') as string);
        }

        try {
          console.log('Starting upload...');
          const result = await uploadSound(token!, uploadData);
          console.log('Upload result:', result);

          if (result && typeof result === 'object' && 'id' in result && 'name' in result) {
            console.log('Upload successful, redirecting...');
            successMessage.textContent = 'Sound uploaded successfully! Redirecting...';
            successMessage.style.display = 'block';

            setTimeout(() => {
              const soundNameSlug = result.name.toLowerCase().replace(/[^\w\s-]/g, '').replace(/[\s_-]+/g, '-').replace(/^-+|-+$/g, '');
              window.location.href = `/instant/${soundNameSlug}-${result.id}`;
            }, 1500);
          } else {
            console.error('Invalid upload result:', result);
            throw new Error('Upload failed - invalid response');
          }
        } catch (error: any) {
          errorMessage.textContent = error.message || 'Upload failed. Please try again.';
          errorMessage.style.display = 'block';
        } finally {
          buttonText.style.display = 'inline';
          buttonLoader.style.display = 'none';
          submitBtn.disabled = false;
        }
      });
    </script>
    <script is:inline src="/register-sw.js"></script>
  </body>
</html>

<style>
  /* Enhanced Auth States */
  .auth-check-state {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 70vh;
    text-align: center;
    color: var(--text-secondary);
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    margin: -2rem -2rem 2rem -2rem;
    border-radius: 0 0 24px 24px;
  }

  .auth-check-state::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grain" width="100" height="100" patternUnits="userSpaceOnUse"><circle cx="25" cy="25" r="1" fill="%23ffffff" opacity="0.03"/><circle cx="75" cy="75" r="1" fill="%23ffffff" opacity="0.03"/><circle cx="50" cy="10" r="0.5" fill="%23ffffff" opacity="0.02"/><circle cx="90" cy="40" r="0.8" fill="%23ffffff" opacity="0.02"/></pattern></defs><rect width="100" height="100" fill="url(%23grain)"/></svg>');
    pointer-events: none;
  }

  .spinner {
    width: 50px;
    height: 50px;
    border: 4px solid rgba(255, 255, 255, 0.3);
    border-top-color: #ffffff;
    border-radius: 50%;
    animation: spin 1s linear infinite;
    margin-bottom: 1.5rem;
    box-shadow: 0 0 20px rgba(255, 255, 255, 0.1);
  }

  @keyframes spin {
    to { transform: rotate(360deg); }
  }

  .not-authenticated-state {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: calc(100vh - 300px);
    padding: 2rem 1rem;
    width: 100%;
    background: var(--header-bg);
    position: relative;
    overflow: hidden;
  }

  .not-authenticated-state::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="music-notes" width="50" height="50" patternUnits="userSpaceOnUse"><path d="M25 20 Q30 15 35 20 Q30 25 25 20 M45 30 Q50 25 55 30 Q50 35 45 30" stroke="%23ffffff" stroke-width="0.5" fill="none" opacity="0.1"/><circle cx="30" cy="35" r="2" fill="%23ffffff" opacity="0.1"/><circle cx="50" cy="45" r="2" fill="%23ffffff" opacity="0.1"/></pattern></defs><rect width="100" height="100" fill="url(%23music-notes)"/></svg>');
  }

  .auth-required-container {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    max-width: 650px;
    margin: 0 auto;
    position: relative;
    z-index: 1;
  }

  .auth-required-card {
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(20px);
    border-radius: 24px;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.15);
    padding: 4rem 3.5rem;
    text-align: center;
    width: 100%;
    border: 1px solid rgba(255, 255, 255, 0.2);
    position: relative;
    overflow: hidden;
  }

  .auth-required-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.1) 0%, rgba(255, 255, 255, 0.05) 100%);
    pointer-events: none;
  }

  .auth-icon-wrapper {
    display: flex;
    justify-content: center;
    margin-bottom: 2.5rem;
    position: relative;
  }

  .auth-icon-wrapper svg {
    color: #667eea;
    background: linear-gradient(135deg, rgba(102, 126, 234, 0.2) 0%, rgba(118, 75, 162, 0.2) 100%);
    padding: 2rem;
    border-radius: 50%;
    width: 100px;
    height: 100px;
    position: relative;
    z-index: 1;
    box-shadow: 0 8px 32px rgba(102, 126, 234, 0.3);
  }

  .auth-title {
    font-size: 2.25rem;
    font-weight: 800;
    color: #2d3748;
    margin-bottom: 1.25rem;
    line-height: 1.2;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .auth-description {
    color: #4a5568;
    font-size: 1.125rem;
    line-height: 1.7;
    margin-bottom: 3rem;
    max-width: 520px;
    margin-left: auto;
    margin-right: auto;
  }

  .auth-actions {
    display: flex;
    gap: 1.25rem;
    justify-content: center;
    flex-wrap: wrap;
    margin-bottom: 3rem;
  }

  .auth-actions .auth-button {
    padding: 1rem 2.5rem;
    border-radius: 12px;
    font-size: 1.1rem;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    min-width: 180px;
    justify-content: center;
    position: relative;
    overflow: hidden;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
  }

  .auth-actions .auth-button::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: left 0.5s;
  }

  .auth-actions .auth-button:hover::before {
    left: 100%;
  }

  .auth-actions .auth-button.primary {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: #ffffff;
    border: none;
  }

  .auth-actions .auth-button.primary:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 25px rgba(102, 126, 234, 0.4);
  }

  .auth-actions .auth-button.secondary {
    background: rgba(255, 255, 255, 0.9);
    color: #667eea;
    border: 2px solid #667eea;
  }

  .auth-actions .auth-button.secondary:hover {
    background: #667eea;
    color: #ffffff;
    transform: translateY(-3px);
    box-shadow: 0 8px 25px rgba(102, 126, 234, 0.3);
  }

  .auth-benefits {
    margin-top: 3rem;
    padding-top: 3rem;
    border-top: 1px solid rgba(102, 126, 234, 0.1);
  }

  .benefits-title {
    font-size: 1.125rem;
    font-weight: 700;
    color: #2d3748;
    margin-bottom: 1.5rem;
    text-align: center;
  }

  .benefits-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.25rem;
    text-align: left;
  }

  .benefits-list li {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    color: #4a5568;
    font-size: 1rem;
    padding: 0.75rem;
    background: rgba(102, 126, 234, 0.05);
    border-radius: 8px;
    border-left: 3px solid #667eea;
  }

  .benefits-list li svg {
    color: #667eea;
    flex-shrink: 0;
    margin-top: 0.125rem;
  }

  @media (max-width: 768px) {
    .auth-required-card {
      padding: 3rem 2rem;
      margin: 1rem;
    }

    .auth-title {
      font-size: 2rem;
    }

    .auth-description {
      font-size: 1rem;
    }

    .auth-actions {
      flex-direction: column;
      gap: 1rem;
    }

    .auth-actions .auth-button {
      width: 100%;
      min-width: unset;
    }

    .benefits-list {
      grid-template-columns: 1fr;
      gap: 1rem;
    }

    .not-authenticated-state {
      min-height: calc(100vh - 250px);
      padding: 2rem 1rem;
    }
  }

  /* Main Content */
  .main-content {
    min-height: calc(100vh - 200px);
    padding: 1rem 1rem 2rem;
  }

  /* Enhanced Upload Form Container */
  .upload-container {
    display: grid;
    grid-template-columns: 1fr 320px;
    gap: 1.5rem;
    max-width: 1200px;
    margin: 0 auto;
    align-items: start;
  }

  .upload-card {
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(20px);
    border-radius: 16px;
    padding: 1.5rem;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    position: relative;
    overflow: hidden;
  }

  .upload-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(102, 126, 234, 0.02) 0%, rgba(118, 75, 162, 0.02) 100%);
    pointer-events: none;
  }

  .upload-form {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
    position: relative;
    z-index: 1;
  }

  /* Enhanced Form Groups */
  .form-group {
    position: relative;
  }

  .form-label {
    display: block;
    font-size: 0.95rem;
    font-weight: 600;
    color: #2d3748;
    margin-bottom: 0.5rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .form-label::after {
    content: '';
    flex: 1;
    height: 1px;
    background: linear-gradient(90deg, #e2e8f0, transparent);
  }

  .form-input {
    width: 100%;
    padding: 0.875rem 1rem;
    border: 2px solid #e2e8f0;
    border-radius: 10px;
    font-size: 0.95rem;
    color: #2d3748;
    background: #ffffff;
    transition: all 0.3s ease;
    outline: none;
    font-weight: 400;
  }

